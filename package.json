{
  "name": "todo-app-server",
  "version": "1.0.0",
  "description": "",
  "main": "./dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node ./dist/server.js",
    "dev": "NODE_ENV=development ts-node-dev -r tsconfig-paths/register --respawn --ignore-watch node_modules --no-notify ./src/server.ts",
    "dev:seed": "npm run dev:load-envs prisma db seed",
    "dev:migration": "npm run dev:load-envs npm run migration:dev",
    "dev:load-envs": "dotenv -e .env.development",
    "test": "NODE_ENV=test jest --passWithNoTests --runInBand",
    "test:seed": "npm run test:load-envs prisma db seed",
    "test:watch": "NODE_ENV=test jest --passWithNoTests --runInBand --watch",
    "test:migration": "npm run test:load-envs npm run migration:deploy",
    "test:load-envs": "dotenv -e .env.test",
    "lint": "eslint . --ext .ts",
    "generate": "prisma generate",
    "migration:dev": "prisma migrate dev",
    "migration:deploy": "prisma migrate deploy"
  },
  "prisma": {
    "seed": "ts-node-dev prisma/seed.ts"
  },
  "keywords": [
    "typescript",
    "back-end",
    "postgres",
    "express",
    "prisma",
    "nodejs",
    "node"
  ],
  "author": "Paulo Serrano",
  "license": "ISC",
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@types/axios": "^0.14.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.3",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^18.11.9",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "eslint": "^8.28.0",
    "jest": "^29.3.1",
    "prisma": "^4.6.1",
    "supertest": "^6.3.1",
    "ts-jest": "^29.0.3",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "@prisma/client": "^4.6.1",
    "axios": "^1.1.3",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "dotenv-cli": "^6.0.0",
    "express": "^4.18.2",
    "http-status": "^1.5.3",
    "jsonwebtoken": "^8.5.1"
  }
}
